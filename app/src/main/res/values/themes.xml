<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CoShop" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/consumerPrimary</item>
        <item name="colorPrimaryVariant">@color/consumerPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:layoutDirection">ltr</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/consumerPrimary</item>
        <item name="colorSecondaryVariant">@color/consumerPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:statusBarColor">@color/consumerPrimary</item> <!-- Add this line -->
        <item name="android:windowLightStatusBar">true</item> <!-- Add this line for light status bar icons -->
    </style>

    <style name="ConsumerTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/consumerPrimary</item>
        <item name="colorPrimaryVariant">@color/consumerPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:statusBarColor">@color/consumerPrimary</item> <!-- Add this line -->
        <item name="android:windowLightStatusBar">true</item> <!-- Add this line for light status bar icons -->
    </style>

    <style name="SupplierTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/supplierPrimary</item>
        <item name="colorPrimaryVariant">@color/supplierPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:statusBarColor">@color/supplierPrimary</item> <!-- Add this line -->
        <item name="android:windowLightStatusBar">true</item> <!-- Add this line for light status bar icons -->
    </style>
</resources>
