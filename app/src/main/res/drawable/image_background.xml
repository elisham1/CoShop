<!-- res/drawable/image_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- White background -->
            <corners android:radius="8dp" /> <!-- Rounded corners -->
            <stroke android:width="2dp" android:color="#CCCCCC" /> <!-- Border -->
        </shape>
    </item>

    <!-- Selected overlay -->
    <item android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Semi-transparent overlay for selected state -->
        </shape>
    </item>

</layer-list>
