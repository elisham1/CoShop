<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000"> <!-- semi-transparent black background -->

    <!-- Arrow pointing to the Plus button -->

    <!-- Text describing the Plus button -->

    <!-- Arrow pointing to the Menu in the top left corner -->

    <!-- Text describing the Menu -->

    <!-- Arrow pointing to the Filter icon -->

    <ImageView
        android:id="@+id/arrow_to_plus"
        android:layout_width="188dp"
        android:layout_height="157dp"
        android:layout_alignTop="@id/newOrderButton"
        android:layout_alignEnd="@id/newOrderButton"
        android:layout_marginTop="-139dp"
        android:layout_marginEnd="-7dp"
        android:rotation="95"
        android:rotationY="178"
        android:src="@drawable/white_arrow" />

    <TextView
        android:id="@+id/text_plus"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrow_to_plus"
        android:layout_alignEnd="@id/arrow_to_plus"
        android:layout_marginTop="-159dp"
        android:layout_marginEnd="158dp"
        android:gravity="center"
        android:text="Tap here to create a new order"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <!-- Text describing the Filter icon -->

    <!-- Dismiss Text -->

    <!-- Dismiss button -->

    <ImageView
        android:id="@+id/arrow_to_menu"
        android:layout_width="211dp"
        android:layout_height="242dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="-39dp"
        android:layout_marginEnd="-4dp"
        android:rotation="-95"
        android:src="@drawable/white_arrow"
        android:visibility="visible" />

    <TextView
        android:id="@+id/text_menu"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/arrow_to_menu"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="167dp"
        android:gravity="center"
        android:text="Tap here for menu"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/arrow_to_filter"
        android:layout_width="198dp"
        android:layout_height="191dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="8dp"
        android:rotation="-74"
        android:src="@drawable/white_arrow"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_filter"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="49dp"
        android:layout_marginTop="105dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Tap here to filter orders"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_enjoy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Enjoy!"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_alignParentBottom="true"
        android:text="Got it!" />

    <ImageButton
        android:id="@+id/newOrderButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="18dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/plus_bg_transp"
        android:contentDescription="newOrder"
        android:onClick="gotoneworder"
        android:scaleType="centerInside"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
