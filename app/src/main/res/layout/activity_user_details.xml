<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdateUserDetailsActivity"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layoutDirection="ltr">

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Edit Details"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layoutDirection="ltr" />

        <LinearLayout
            android:id="@+id/profilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layoutDirection="ltr">
            <!-- Profile Picture -->
            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:focusable="true"
                android:layoutDirection="ltr">

                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="Photo"
                    android:layoutDirection="ltr"
                    android:scaleType="centerCrop"
                    android:src="@drawable/android" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Edit"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layoutDirection="ltr" />
        </LinearLayout>

        <!-- Name Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Name:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layoutDirection="ltr"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border">

            <!-- User's Name -->
            <TextView
                android:id="@+id/fullName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="12dp"/>

            <!-- Edit Icon -->
            <ImageButton
                android:id="@+id/edit_name_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Edit Name"
                android:src="@drawable/edit"
                android:padding="8dp"
                android:layout_gravity="center_vertical"
                android:layoutDirection="rtl"/>
        </LinearLayout>

        <!-- Email Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Email:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="12dp"
            android:textSize="18sp"
            android:background="@drawable/border"
            android:gravity="center_vertical|start"
            android:layoutDirection="ltr" />

        <!-- Address Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Address:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <LinearLayout
            android:id="@+id/search_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/border"
            android:padding="8dp"
            android:layout_marginTop="1dp"
            android:layoutDirection="ltr">

            <ImageButton
                android:id="@+id/search_address_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Search address"
                android:src="@drawable/baseline_search_24"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:layoutDirection="ltr" />

            <TextView
                android:id="@+id/search_address_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:hint="Search address"
                android:paddingStart="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layoutDirection="ltr"/>

            <ImageButton
                android:id="@+id/edit_address_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Edit address"
                android:src="@drawable/edit"
                android:padding="10dp"
                android:visibility="gone"
                android:layoutDirection="rtl" />
        </LinearLayout>

        <!-- User Type Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="User Type:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <RadioGroup
            android:id="@+id/choiceLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/supplierRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Supplier" />

            <RadioButton
                android:id="@+id/consumerRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consumer" />
        </RadioGroup>

        <!-- Done Button -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Done" />
    </LinearLayout>

</ScrollView>
