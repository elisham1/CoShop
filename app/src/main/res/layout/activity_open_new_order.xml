<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".OpenNewOrderActivity"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layoutDirection="ltr">

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Open New Order"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layoutDirection="ltr" />

        <!-- Title Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Title:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="15sp"
            android:inputType="text"
            android:hint="Enter Title (max 25 characters)"
            android:background="@drawable/border"
            android:padding="12dp"
            android:maxLength="30"
            android:layoutDirection="ltr" />

        <!-- URL Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Payment Link:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:padding="8dp"
            android:layoutDirection="ltr">
            <EditText
                android:id="@+id/url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:textSize="15sp"
                android:inputType="textUri"
                android:hint="Insert a secure payment link."
                android:layoutDirection="ltr" />

            <ImageButton
                android:id="@+id/tap_icon"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Tap icon"
                android:scaleType="fitCenter"
                android:src="@drawable/tap"
                android:layoutDirection="ltr" />
        </LinearLayout>

        <!-- Category Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Category:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <Spinner
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner"
            android:padding="12dp"
            android:layoutDirection="ltr" />

        <!-- Search Address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Address:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <LinearLayout
            android:id="@+id/search_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:padding="8dp"
            android:layoutDirection="ltr">
            <ImageButton
                android:id="@+id/search_address_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Search address"
                android:src="@drawable/baseline_search_24"
                android:layoutDirection="ltr" />
            <TextView
                android:id="@+id/search_address_text"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:hint="Search address"
                android:paddingStart="8dp"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layoutDirection="ltr"/>
            <ImageButton
                android:id="@+id/edit_address_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Edit address"
                android:src="@drawable/edit"
                android:visibility="gone"
                android:layoutDirection="ltr" />
        </LinearLayout>

        <!-- Description Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Describe your order"
            android:textSize="15sp"
            android:background="@drawable/border"
            android:padding="12dp"
            android:layoutDirection="ltr" />

        <!-- Date and Time Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Date and Time:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/border"
            android:padding="8dp"
            android:layoutDirection="ltr">
            <ImageButton
                android:id="@+id/date_icon"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Select Date"
                android:src="@drawable/baseline_calendar_month_24"
                android:onClick="showDatePickerDialog"
                android:layoutDirection="ltr" />
            <TextView
                android:id="@+id/date_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Date"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:clickable="true"
                android:onClick="showDatePickerDialog"
                android:layoutDirection="ltr" />
            <ImageButton
                android:id="@+id/time_icon"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Select Time"
                android:src="@drawable/ic_baseline_access_time_24"
                android:onClick="showTimePickerDialog"
                android:layoutDirection="ltr" />
            <TextView
                android:id="@+id/time_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Select Time"
                android:textSize="15sp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:clickable="true"
                android:onClick="showTimePickerDialog"
                android:layoutDirection="ltr" />
        </LinearLayout>

        <!-- Max People Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Max People:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <EditText
            android:id="@+id/maxPeopleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Maximum people"
            android:textSize="15sp"
            android:background="@drawable/border"
            android:padding="12dp"
            android:layoutDirection="ltr" />

        <!-- Submit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="4dp"
            android:layoutDirection="ltr">
            <ImageButton
                android:id="@+id/submit_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:contentDescription="Submit new order"
                android:onClick="goToMyOrders"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/ic_plus_consumer"
                android:layoutDirection="ltr" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
