<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MyOrdersActivity">

    <!-- Sorting options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnAllOrders"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="All My Orders"
            android:backgroundTint="@color/colorDefault"
            android:backgroundTintMode="src_in"/>

        <Button
            android:id="@+id/btnOpenedOrders"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Orders I Opened"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/colorDefault"
            android:backgroundTintMode="src_in"/>

        <Button
            android:id="@+id/btnJoinedOrders"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Orders I Joined"
            android:backgroundTint="@color/colorDefault"
            android:backgroundTintMode="src_in"/>
    </LinearLayout>

    <!-- Display selected sorting option -->
    <TextView
        android:id="@+id/textViewSelectedOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:gravity="center"
        android:text="All Orders" />

    <!-- Scroll view for orders -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:contentDescription="Scrollable area for orders">

        <LinearLayout
            android:id="@+id/ordersLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</LinearLayout>
