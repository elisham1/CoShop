<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".UpdateUserDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Profile Picture -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profilePic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Photo"
                android:scaleType="centerCrop"
                android:src="@drawable/android" />
        </androidx.cardview.widget.CardView>

        <!-- User's Name -->
        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <!-- Email Section -->
        <TextView
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="#EEEEEE"
            android:gravity="center_vertical|start" />

        <!-- Type Section -->
        <TextView
            android:id="@+id/type_of_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textSize="18sp"
            android:background="#EEEEEE"
            android:textColor="@color/black"
            android:gravity="center_vertical|start" />

        <!-- Address Section -->
        <LinearLayout
            android:id="@+id/search_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginTop="16dp">

            <ImageButton
                android:id="@+id/edit_address_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Edit address"
                android:src="@drawable/edit"
                android:padding="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/search_address_text"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:gravity="center_vertical|start"
                android:hint="Search address"
                android:paddingStart="12dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/search_address_button"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:contentDescription="Search address"
                android:src="@drawable/baseline_search_24"
                android:padding="8dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- Update Categories Button -->
        <Button
            android:id="@+id/btn_update_categories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Update Categories" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Change Password Button -->
            <Button
                android:id="@+id/changePasswordText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/change_password"
                android:textSize="14sp" />

            <!-- Delete Account Button -->
            <Button
                android:id="@+id/deleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Delete Account"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Done Button -->
        <Button
            android:id="@+id/doneButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Done" />
    </LinearLayout>

</ScrollView>
