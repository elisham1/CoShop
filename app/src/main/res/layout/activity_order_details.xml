<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:layoutDirection="ltr"
    tools:context=".OrderDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="ltr">

        <!-- Top layout with picture in the middle, icons on the left and right -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/border">

            <!-- Left icons (Share and Chat) -->
                <ImageView
                    android:id="@+id/shareIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:src="@drawable/ic_share_consumer"
                    android:contentDescription="Share Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageView
                    android:id="@+id/chatIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginStart="0dp"
                    android:src="@drawable/ic_chat_consumer"
                    android:contentDescription="Chat Icon"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/shareIcon"/>

            <!-- עיגול עם תמונת הקטגוריה -->
            <com.elisham.coshop.CircularImageView
                android:id="@+id/categoryImageView"
                android:layout_width="136dp"
                android:layout_height="136dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Right icon (Join) -->
            <ImageView
                android:id="@+id/joinIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_join_consumer"
                android:contentDescription="Join Icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/categoryImageView"/>

            <ImageView
                android:id="@+id/waitingListButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_waitlist"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/categoryImageView"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/leaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:src="@drawable/ic_leave_consumer"
                android:layout_margin="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/categoryImageView"
                app:layout_constraintEnd_toEndOf="parent" />
            <!-- Order title -->
            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="Order Title"
                app:layout_constraintTop_toBottomOf="@id/categoryImageView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- שם הקטגוריה מתחת לתמונה -->
            <TextView
                android:id="@+id/categoryTextView"
                style="@style/CustomTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members"
                android:padding="2dp"
                app:layout_constraintTop_toBottomOf="@id/titleTextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layoutDirection="ltr"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Layout for order details and time left -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/groupInfoTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order Details"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left:"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <!-- The timer layout -->
                <LinearLayout
                    android:id="@+id/timerContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/groupInfoTextView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:id="@+id/daysContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/daysTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/black"
                                android:textSize="10sp"
                                android:textColor="@android:color/white"
                                android:padding="4dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/daysLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Day"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/colon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        android:padding="2dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/hoursContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/hoursTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/black"
                                android:textSize="10sp"
                                android:textColor="@android:color/white"
                                android:padding="4dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/hoursLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hour"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/colon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        android:padding="2dp" />

                    <LinearLayout
                        android:id="@+id/minutesContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/minutesTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/black"
                                android:textSize="10sp"
                                android:textColor="@android:color/white"
                                android:padding="4dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/minutesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Min"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/colon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textSize="10sp"
                        android:textColor="@android:color/black"
                        android:padding="2dp"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/secondsContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/secondsTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@android:color/black"
                                android:textSize="10sp"
                                android:textColor="@android:color/white"
                                android:padding="4dp" />
                        </FrameLayout>

                        <TextView
                            android:id="@+id/secondsLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sec"
                            android:textSize="8sp"
                            android:textColor="@android:color/black"
                            android:padding="2dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Order description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Order Description:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border"
            android:layout_marginTop="1dp">
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Order Description"
                android:minLines="2"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center" />
            <Button
                android:id="@+id/siteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Pay with paybox"
                android:visibility="visible"
                android:layout_margin="4dp"/>
        </LinearLayout>
        <!-- Order address -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Order Address:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layoutDirection="ltr" />
        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Order Address"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:minLines="2"
            android:background="@drawable/border"/>

        <!-- Layout for users in order -->
        <LinearLayout
            android:id="@+id/userListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp"/>
        <!-- Add views for each user dynamically -->

        <!-- TextView שמוסתר -->
        <TextView
            android:id="@+id/timeTextView"
            style="@style/CustomTextViewStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="8dp"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>
